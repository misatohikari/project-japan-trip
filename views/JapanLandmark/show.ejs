<% layout("layouts/boilerplate")%>
<div id="map" style="width: 100%; height: 440px; margin-right: 20px; margin-left: 20px;"></div>
<div class="container">
    <br>
<h1>All Landmarks In Japan</h1>
<br>
<% for(let landmark of japanLandmark){%>
    <div class="card" mb-3>
        <div class="row">
            <div class="col-md-4">
                <img class="img-fluid" alt="" src="<%= landmark.images[0].url %>">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= landmark.title %></h5>
                    <p class="card-text"><%= landmark.description %></p>
                    <p class="card-text">
                        
                        <small class="text-muted"><%= landmark.location %></small>
                    </p>
                    <a class="btn btn-primary" href="/japanLandmark/<%= landmark._id%>"> View <%= landmark.title%></a>
                </div>
            </div>
        </div>
    </div>
<% } %>
</div>

